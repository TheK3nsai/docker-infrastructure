# Zammad Environment Variables

# Image settings
IMAGE_REPO=ghcr.io/zammad/zammad
VERSION=6.5.2-46

# Database (must match shared-services init-scripts/postgres/init-databases.sql)
POSTGRES_HOST=shared-postgres
POSTGRES_USER=zammad
POSTGRES_PASS=your-zammad-db-password
POSTGRES_DB=zammad

# Component versions
ELASTICSEARCH_VERSION=8.15.0
MEMCACHE_VERSION=1.6-alpine

# Elasticsearch JVM settings (adjust based on available memory)
ELASTICSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# Memcached
MEMCACHE_SERVERS=zammad-memcached:11211

# Web server
NGINX_SERVER_NAME=tickets.yourdomain.com
NGINX_SERVER_SCHEME=https
RAILS_TRUSTED_PROXIES=172.16.0.0/12

# Container restart policy
RESTART=unless-stopped
