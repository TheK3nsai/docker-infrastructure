-- PostgreSQL Init Script
-- Copy to init-databases.sql and update passwords

-- Zammad
CREATE USER zammad WITH PASSWORD 'your-zammad-db-password';
CREATE DATABASE zammad OWNER zammad;
GRANT ALL PRIVILEGES ON DATABASE zammad TO zammad;

-- Authentik
CREATE USER authentik WITH PASSWORD 'your-authentik-db-password';
CREATE DATABASE authentik OWNER authentik;
GRANT ALL PRIVILEGES ON DATABASE authentik TO authentik;

